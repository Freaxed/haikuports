CHECKSUM_SHA256="6ab0b77d32d3b953973ff8457ca98f2ae66e93f4951f76b6615fb9d6476992cb"
SOURCE_DIR="xrs-haiku-1.9.0"

ARCHITECTURES="all !x86_gcc2"

PROVIDES="
	xrs = $portVersion
	app:XRS = $portVersion
	"
REQUIRES="
	haiku
	lib:libfluidlite
	lib:libsndfile
	lib:libsamplerate
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libsndfile
	devel:libsamplerate
    devel:libfluidlite
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:g++
	cmd:make
	"

BUILD()
{
	make
}

INSTALL()
{
	mkdir -p $appsDir
	cp XRS $appsDir/
	addAppDeskbarSymlink $appsDir/XRS
}
